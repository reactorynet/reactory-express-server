{
  "name": "reactory-api",
  "version": "1.0.0",
  "description": "graphql api server for TowerStone and PLC Assesor Toolsets.",
  "main": "server.js",
  "module": "reactory-api",
  "author": "Werner Weber",
  "license": "MIT",
  "scripts": {
    "start-win": "set NODE_PATH=. && nodemon ./server.js --exec babel-node --preset=es2016,stage-2",
    "start": "NODE_PATH=. nodemon ./server.js --exec babel-node --preset=es2016,stage-2",
    "start-prod": "NODE_PATH=. APP_DATA_ROOT=/data/reactory LEGACY_APP_DATA_ROOT=/data/legacy API_URI_ROOT=https://api.reactory.net/  CDN_ROOT=https://api.reactory.net/cdn/ nodemon ./server.js --exec babel-node --preset=es2016,stage-2",
    "build": "babel . --out-dir dist --presets es2016,stage-2 --ignore spec.js,node_modules,dist --copy-files",
    "serve-b": "NODE_PATH=. babel-node ./server.js --preset=es2016,stage-2",
    "serve": "pm2 start config/run/$BUILD_TARGET.config.js",
    "start_debug": "babel-node ./server.js --inspect --preset=es2016,stage-2",
    "clean": "rimraf ./dist/",
    "build-serve": "npm-run-all clean build serve",
    "make-install": "npm install & npm run build-serve",
    "deploy": "pm2 deploy ./config/run/$BUILD_TARGET.config.js production deploy",
    "setup-production": "pm2 deploy ./config/run/$BUILD_TARGET.config.js production setup",
    "test": "mocha",
    "lint": "eslint . --fix"
  },
  "dependencies": {
    "@azure/storage-blob": "^10.2.0-preview",
    "@azure/storage-file": "^10.0.0-preview",
    "@babel/plugin-transform-typescript": "^7.1.0",
