{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forms.reactory.net/funisave-gw/payment-schedule-add/root.json",
  "type": "object",
  "title": "New Product Payment",
  "description": "Use this form to add a new product payment",
  "required": [
    "payAtNumber",    
    "paymentBankAccountId",
    "paymentType",
    "productType",
    "amount"
  ],
  "properties": {
    "payAtNumber": {
      "$id": "#/properties/payAtNumber",
      "type": "string",
      "title": "PayAt Number"
    },     
    "paymentBankAccountId": {
      "$id": "#/properties/paymentBankAccountId",
      "type": "string",
      "title": "Payment Bank Account",
      "default": "0000002017",
      "examples": [
        "0000002017"
      ],
      "pattern": "^(.*)$"
    },
    "nominatedAccount": {
      "$id": "#/properties/header/properties/paymentType",
      "type": "string",
      "title": "Payment Type",
      "default": "NAEDO",
      "enum": [
        "NAEDO", "EFT", "DO"
      ],
      "examples": [
        "NAEDO", "EFT", "DO"
      ],
      "pattern": "^(.*)$"
    },
    "productType": {
      "$id": "#/properties/header/properties/productType",
      "type": "string",
      "title": "Product Type",
      "default": "CREDIT LIFE",
      "enum": ["CREDIT LIFE", "FUNERAL"],
      "examples": [
        "CREDIT LIFE"
      ],
      "pattern": "^(.*)$"
    },
    "amount": {
      "$id": "#/properties/schedule/items/properties/amount",
      "type": "number",
      "title": "Amount",
      "default": 0,
      "examples": [
        1000
      ]
    }
  }
}