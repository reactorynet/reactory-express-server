{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forms.reactory.net/funisave-gw/payment-schedule-add/root.json",
  "type": "object",
  "title": "New Payment Schedule",
  "description": "Use this form to add a new payment to the gateway",
  "required": [
    "header",
    "schedule"
  ],
  "properties": {
    "header": {
      "$id": "#/properties/header",
      "type": "object",
      "title": "Header",
      "required": [
        "profileId",
        "nominatedAccount",
        "chargesAccount",
        "serviceType",
        "productType"
      ],
      "properties": {
        "profileId": {
          "$id": "#/properties/header/properties/profileId",
          "type": "string",
          "title": "Profile Id",
          "default": "0000002017",
          "examples": [
            "0000002017"
          ],
          "pattern": "^(.*)$"
        },
        "nominatedAccount": {
          "$id": "#/properties/header/properties/nominatedAccount",
          "type": "string",
          "title": "Nominated Account",
          "default": "1452071160",
          "examples": [
            "1452071160"
          ],
          "pattern": "^(.*)$"
        },
        "chargesAccount": {
          "$id": "#/properties/header/properties/chargesAccount",
          "type": "string",
          "title": "Charges Account",
          "default": "1452071160",
          "examples": [
            "1452071160"
          ],
          "pattern": "^(.*)$"
        },
        "serviceType": {
          "$id": "#/properties/header/properties/serviceType",
          "type": "string",
          "title": "Service Type",
          "default": "NAEDO",
          "enum": ["NAEDO", "SDV", "EFT"],
          "examples": [
            "SDV"
          ],
          "pattern": "^(.*)$"
        },
        "productType": {
          "$id": "#/properties/header/properties/productType",
          "type": "string",
          "title": "Product Type",
          "default": "CREDIT LIFE",
          "enum": ["CREDIT LIFE", "FUNERAL"],
          "examples": [
            "CREDIT LIFE"
          ],
          "pattern": "^(.*)$"
        }
      }
    },
    "schedule": {
      "$id": "#/properties/schedule",
      "type": "array",
      "title": "Schedule Entries",
      "items": {
        "$id": "#/properties/schedule/items",
        "type": "object",
        "title": "The Items Schema",
        "required": [
          "accountHolder",
          "accountNumber",
          "bank",
          "branchCode",
          "amount",
          "actionDate",
          "reference",
          "proposer",
          "policyNumber"
        ],
        "properties": {
          "accountHolder": {
            "$id": "#/properties/schedule/items/properties/accountHolder",
            "type": "string",
            "title": "Account Holder",
            "default": "",
            "examples": [
              "M Poppings"
            ],
            "pattern": "^(.*)$"
          },
          "accountNumber": {
            "$id": "#/properties/schedule/items/properties/accountNumber",
            "type": "string",
            "title": "Account Number",
            "default": "",
            "examples": [
              "1004999720"
            ],
            "pattern": "^(.*)$"
          },
          "bank": {
            "$id": "#/properties/schedule/items/properties/bank",
            "type": "string",
            "title": "Bank",
            "default": "",
            "examples": [
              "nedbank"
            ],
            "pattern": "^(.*)$"
          },
          "branchCode": {
            "$id": "#/properties/schedule/items/properties/branchCode",
            "type": "string",
            "title": "Branch Code",
            "default": "",
            "examples": [
              "198765"
            ],
            "pattern": "^(.*)$"
          },
          "amount": {
            "$id": "#/properties/schedule/items/properties/amount",
            "type": "integer",
            "title": "Amount",
            "default": 0,
            "examples": [
              1000
            ]
          },
          "actionDate": {
            "$id": "#/properties/schedule/items/properties/actionDate",
            "type": "string",
            "title": "Action Date",
            "default": "",
            "examples": [
              "t0"
            ],
            "pattern": "^(.*)$"
          },
          "reference": {
            "$id": "#/properties/schedule/items/properties/reference",
            "type": "string",
            "title": "Payment Reference",
            "default": "",
            "examples": [
              ""
            ],
            "pattern": "^(.*)$"
          },
          "proposer": {
            "$id": "#/properties/schedule/items/properties/proposer",
            "type": "object",
            "title": "Account Holder Details",
            "required": [
              "firstName",
              "lastName"
            ],
            "properties": {
              "firstName": {
                "$id": "#/properties/schedule/items/properties/proposer/properties/firstName",
                "type": "string",
                "title": "First Name",
                "default": "",
                "examples": [
                  "Mary"
                ],
                "pattern": "^(.*)$"
              },
              "lastName": {
                "$id": "#/properties/schedule/items/properties/proposer/properties/lastName",
                "type": "string",
                "title": "Lastname",
                "default": "",
                "examples": [
                  "Poppings"
                ],
                "pattern": "^(.*)$"
              }
            }
          },
          "policyNumber": {
            "$id": "#/properties/schedule/items/properties/policyNumber",
            "type": "string",
            "title": "Policynumber",
            "default": "",
            "examples": [
              "68017084087"
            ],
            "pattern": "^(.*)$"
          }
        }
      }
    }
  }
}